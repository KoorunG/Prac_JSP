<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<jsp-config>
	<jsp-property-group>
		<url-pattern>/view/*</url-pattern> 							<!-- 프로퍼티를 적용할 JSP 파일의 URL 패턴 지정 -->
		<include-prelude>/common/variable.jspf</include-prelude>	<!-- url-pattern 태그에 지정한 패턴에 해당하는 JSP 파일 앞에 삽입할 파일을 지정 -->
		<include-coda>/common/footer.jspf</include-coda>			<!-- url-pattern 태그에 지정한 패턴에 해당하는 JSP 파일 뒤에 삽입할 파일을 지정 -->
	</jsp-property-group>
</jsp-config>

	

</web-app>

<!-- URL이 /view/로 시작하는 모든 JSP 파일 앞, 뒤에 지정한 파일 include -->